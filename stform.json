    "supplier": {
        "label":"Proveedores",
        "query":"SELECT sup.id, sup.user, sup.name, pl.name, sup.email, sup.phone, sup.local_phone, sup.telegram, sup.country, sup.paypal, sup.pago_movil, sup.bank FROM supplier sup, platform pl WHERE sup.platform_that_supplies = pl.id ORDER BY sup.id ASC",
