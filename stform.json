        {"type":"text", "label":"Telegram", "name":"telegram", "normal":"yes"},
        {"type":"text", "label":"Pais", "name":"country", "normal":"yes"},
        {"type":"text", "label":"PayPal", "name":"paypal", "placeholder":"Email", "normal":"yes"},
